<Window x:Class="UIWPFDemo.Windows.PlaceHolderTextBoxDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWPFDemo.Windows"
        xmlns:plchld="clr-namespace:PlaceHolderTextBox;assembly=PlaceHolderTextBox"
        mc:Ignorable="d"
        
        Title="PlaceHolder TextBox Window"
        Height="450" Width="800">

    <Grid>

        <plchld:PlaceHolderTextBox VerticalAlignment="Center"
                                   Width="300"
                                   Height="40"
                                   Padding="8 8 0 0"
                                   FontSize="16"
                                   PlaceHolder="Search"/>

    </Grid>
</Window>
